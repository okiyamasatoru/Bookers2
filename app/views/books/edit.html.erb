<%= render 'books/errors', book: @book %>
<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h1>Editing Book</h1>
          
          <%= form_with model: @book,url: book_path(@book.id), method: :patch do |f| %>
          
            <h4>title</h4>
            <%= f.text_field :title %>
          
            <h4>Opinion</h4>
            <%= f.text_area :body %>
          
            <div class="form-group">
            <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
            </div>
          
          <% end %>
          <%= link_to "Back", books_path %>
          |
          <%= link_to "Show", book_path(@book) %>
    </div>      
  </div>        
</div>