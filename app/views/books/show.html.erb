<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
<div class= "container">
  <div class= "row">
    <div class= "col-md-3">

      <%= render 'users/info', user: @user %>
      <%= render 'books/form', book: @new_book %>
      <%= render 'books/errors', book: @new_book %>
    </div>
       <div class= "col-md-8 offset-md-1">
       <h2>Book detail</h2>
                <table class= "table">
                  <tr>
                    <td>
                        <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
                           <%= link_to @user.name, user_path(@user) %>
                    </td>
                    <td>
                        <%= link_to @book.title,book_path(current_user) %>
                    </td>
                    <td>
                        <%= @book.body %>
                        </td>
                    <td>
                      <% if @book.user.id == current_user.id %>
                          <%= link_to  "Edit", edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}"%>
                          <%= link_to  "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%>
                      <%end%>


                    </td>
                  </tr>
                </table>
       </div>
  </div>
</div>